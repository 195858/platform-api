{
  "name": "apim-connector-server",
  "version": "0.2.2",
  "description": "Solace API Management Connector",
  "homepage": "https://github.com/solace-iot-team/platform-api",
  "repository": {
    "type": "git",
    "url": "https://github.com/solace-iot-team/platform-api"
  },
  "bugs": {
    "url": "https://github.com/solace-iot-team/platform-api/issues"
  },
  "scripts": {
    "server:build": "ts-node build.ts && tsc",
    "server:start": "node dist/server/index.js",
    "prestart": "ts-node build.ts && tsc",
    "start": "node dist/server/index.js",
    "dev": "nodemon server/index.ts | pino-pretty",
    "server:dev": "nodemon server/index.ts | pino-pretty",
    "gen:server:apitypes": "dtsgen --out ./src/model/@types/api-model/index.d.ts ./server/common/api.yml",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "test:integration": "mocha --config test/integration/.mocharc.yml test/integration/**/**.spec.ts",
    "test:concurrency": "mocha --config test/integration/.mocharc.yml test/integration/**/*.concurrency.spec.ts --exit",
    "test:dev": "mocha --config test/integration/.mocharc.yml -b test/integration/**/operations.spec.ts --exit",
    "test:debug": "mocha -r ts-node/register --inspect-brk test/**/*.ts --exit"
  },
